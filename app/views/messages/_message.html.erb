<tr class="info">
  <td><%= message.id %></td>
  <td><%= message.sender %></td>
  <td><%= message.title %></td>
  <td><%= message.body %></td>
  <td><%= message.created_at %></td>
  <td>
    <%= button_to 'Delete', message_path(message),
          method: :delete,
          data: { confirm: 'Are you sure?' }, 
          class: "btn btn-danger btn-xs" %>
  </td>
</tr>
