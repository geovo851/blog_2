<% provide(:title, 'Messages') %>

<div class="container-fluid"> 
  <div class="row">
    <div class="col-sm-12 col-md-12">

      <div class="page-header">
        <h1>Messages</h1>
      </div>

      <% if @messages.empty? %>
        <b>No articles</b>
      <% else %>

      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
           <tr class="warning">
              <th>ID</th>
              <th>Sender</th>
              <th>Subject</th>
              <th>Body</th>
              <th>Created</th>
              <th></th>
            </tr>
          </thead>
          <tbody id="messages">
            <%= render partial: "message", :collection => @messages, :as => :message %>
          </tbody>
        </table>
        </div>
        <div id="paginator", class="paginate-centre">
          <%= paginate @messages, :remote => true %>
        </div>
      <% end %>

      <p>
        <%= button_to 'Back', admin_path, method: :get, class: "btn btn-default" %>
      </p>

    </div>
  </div>
</div>