<% if @comment.id %>
  $('#empty-body').html('');
  $('#count_comment').html('<%= j pluralize(@count_comments, "Comment") %>');
  $("<%= j render(partial: 'comments/comment', locals: {comment: @comment}) %>").appendTo($("#comments"));
  $('#comment_body').val('');
<% else %>
  $('#empty-body').html('Comment is empty');
<% end %>
