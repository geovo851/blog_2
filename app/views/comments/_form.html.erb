<%= form_for([@article, @article.comments.build], remote: true) do |f| %>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body, cols: 70, rows: 5 %>
  </p>
  <p>
    <% if user_signed_in? %>
      <%= f.submit "Create comment", class: "btn btn-primary btn-sm" %>
    <% else %>
      <%= link_to 'Sign in', new_user_session_path, class: "btn btn-primary btn-sm" %>
    <% end %>
  </p>
<% end %>