<% provide(:title, 'Articles') %>

<div class="container-fluid"> 
  <div class="row">
    <div class="col-sm-12 col-md-12">

      <div class="page-header">
        <h1>Articles</h1>
      </div>
      <p>
        <%= button_to new_article_path, method: :get, class: 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-plus"></span>
          Add article
        <% end %>
      </p>

      <% if @articles.empty? %>
        <b>No articles</b>
      <% else %>

      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
           <tr class="warning">
              <th>ID</th>
              <th>Article</th>
              <th>Body</th>
              <th>Author</th>
              <th>Updated</th>
              <th colspan="2"></th>
            </tr>
          </thead>
          <tbody id="articles">
            <%= render partial: "article", :collection => @articles, :as => :article %>
          </tbody>
        </table>
        </div>
        <div id="paginator", class="paginate-centre">
          <%= paginate @articles, :remote => true %>
        </div>
      <% end %>

      <p>
        <%= button_to 'Back', admin_path, method: :get, class: "btn btn-default" %>
      </p>

    </div>
  </div>
</div>