<%= image_tag(@article.photo) if @article.photo? %></td>

<%= form_for @article, :html => { multipart: true, class: "form-horizontal" } do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :title, class: "col-sm-1 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :title, size: 22, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :text, class: "col-sm-1 control-label" %>
    <div class="col-sm-11">
      <%= f.text_area :text, cols: 40, rows: 30, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :photo, class: "col-sm-1 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :photo %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :photo_small, class: "col-sm-1 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :photo_small %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-4">
      <%= f.submit title_sumbit, class: "btn btn-primary btn-sm"%>
    </div>
  </div>
<% end %>

<div><%= button_to 'Back', articles_path, method: :get, class: "btn btn-default" %></div>

