<% provide(:title, @article.title ) %>

<div class="container-fluid"> 
  <div class="row">

    <div class="col-sm-9 col-md-10">

    <div class="container">
      <div class="page-header">
        <h1 class="article_title"><%= @article.title %></h1>
      </div>
      <p class="article-author-date"> by 
        <span class="author"><%= @article.user.name %> </span>
        <%= " on #{l @article.updated_at, :format => :long }" %>
      </p>
      <p>
        <%= image_tag(@article.photo) if @article.photo? %></p>
      <p>
        <%= sanitize(@article.text) %>
      </p>

      <h2 id="count_comment"><%= pluralize(@count_comments, 'Comment') %></h2>
      <div id="comments">
        <%= render @article.comments %>
      </div>


      <h2>Add a comment:</h2>
      <div id="empty-body"></div>
      <%= render 'comments/form' %>

      <%= link_to 'Back', :back, class: "btn btn-default btn-sm" %>
    </div>

  </div>
</div>