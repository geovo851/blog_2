<% provide(:title, 'Users') %>

<div class="container-fluid"> 
  <div class="row">
    <div class="col-sm-12 col-md-12">

      <div class="page-header">
        <h1>Users</h1>
      </div>
      
      <% if @users.empty? %>
        <b>No users</b>
      <% else %>

      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
           <tr class="warning">
              <th>ID</th>
              <th>Name</th>
              <th>Email</th>
              <th>Role</th>
              <th>Created</th>
              <th colspan="2"></th>
            </tr>
          </thead>
          <tbody id="users">
            <%= render partial: "user", :collection => @users, as: :user %>
          </tbody>
        </table>
        </div>
        <div id="paginator", class="paginate-centre">
          <%= paginate @users, :remote => true %>
        </div>
      <% end %>

      <p>
        <%= button_to 'Back', admin_path, method: :get, class: "btn btn-default" %>
      </p>

    </div>
  </div>
</div>