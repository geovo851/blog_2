<tr class="info">
  <td><%= user.id %></td>
  <td><%= user.name %></td>
  <td><%= user.email %></td>
  <td><%= user.role.title %></td>
  <td><%= user.created_at %></td>
  <td>
    <%= button_to 'Edit role', edit_user_path(user),
            method: :get, class: "btn btn-success btn-xs" %>
  </td>
  <td>
    <%= button_to 'Delete', user_path(user),
          method: :delete,
          data: { confirm: 'Are you sure?' }, 
          class: "btn btn-danger btn-xs" %>
  </td>
</tr>
